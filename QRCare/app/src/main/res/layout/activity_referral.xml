<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Referral"
    android:background="#fff">
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/username_text"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/mobile_text"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textColor="#fff"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/back_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout"
        android:orientation="vertical"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout2"
        android:background="#000">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:src="@drawable/back_3"
            android:rotation="180"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout"
        android:background="@drawable/samplecardback"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:textColor="#fff"
            android:textSize="30dp"

            android:id="@+id/yourblance"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Balance:"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/balance"
            app:layout_constraintTop_toBottomOf="@+id/yourblance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            app:layout_constraintStart_toStartOf="@+id/yourblance"/>
        <TextView
            android:id="@+id/totalearned"
            app:layout_constraintTop_toBottomOf="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Earned"
            app:layout_constraintStart_toStartOf="@+id/yourblance"/>
        <TextView
            android:id="@+id/earned"
            app:layout_constraintTop_toBottomOf="@+id/totalearned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            app:layout_constraintStart_toStartOf="@+id/yourblance"/>
        <TextView
            android:id="@+id/totalreferral"
            app:layout_constraintTop_toBottomOf="@+id/earned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Referral"
            app:layout_constraintStart_toStartOf="@+id/yourblance"/>
        <TextView
            android:id="@+id/referral"
            app:layout_constraintTop_toBottomOf="@+id/totalreferral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            app:layout_constraintStart_toStartOf="@+id/yourblance"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>