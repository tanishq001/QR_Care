<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllOptions"
    android:background="#fff">




    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        >

    <TextView
        android:id="@+id/username_text"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#fff"
         />
        <TextView
            android:id="@+id/mobile_text"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textColor="#fff"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/back_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout"
        android:orientation="vertical"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout2"
        android:background="#000">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:src="@drawable/back_3"
        android:rotation="180"/>
    </LinearLayout>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile"
        android:layout_marginTop="20dp"
        app:strokeColor="#fff"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/qrcode"
        android:layout_width="120dp"
        android:layout_height="135dp"

        android:background="#fff"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/MainTheme">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="10">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_account_circle_24"
                android:layout_weight="7"/>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Profile"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#fff"
                android:textSize="23dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="20dp"
        android:id="@+id/qrcode"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout"
        app:layout_constraintStart_toEndOf="@id/profile"
        android:layout_width="120dp"
        android:layout_height="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#fff"
        app:cardCornerRadius="10dp"
        app:strokeColor="#fff"
        app:strokeWidth="2dp"
        app:cardBackgroundColor="@color/MainTheme">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="10">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_outline_account_circle_24"
                android:layout_weight="7"/>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="My QR"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#fff"
                android:textSize="23dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/savedcards"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/qrcode"
        android:layout_width="120dp"
        android:layout_height="135dp"

        android:background="#fff"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/MainTheme">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="10">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_savedcards_24"
                android:layout_weight="7"/>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Saved Cards"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView

        android:layout_marginTop="20dp"
        android:id="@+id/favourite"
        app:layout_constraintTop_toBottomOf="@+id/qrcode"
        app:layout_constraintStart_toEndOf="@id/savedcards"
        android:layout_width="120dp"
        android:layout_height="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#fff"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/MainTheme">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_favorite_24"
                android:layout_weight="7"/>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Favourite"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#fff"
                android:textSize="23dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/referral"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/savedcards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/qrcode"
        android:layout_width="120dp"
        android:layout_height="135dp"

        android:background="#fff"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/MainTheme">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="10">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_outline_account_circle_24"
                android:layout_weight="7"/>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Referrals"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#fff"
                android:textSize="23dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="20dp"
        android:id="@+id/explore"
        app:layout_constraintTop_toBottomOf="@+id/favourite"
        app:layout_constraintStart_toEndOf="@id/profile"
        android:layout_width="120dp"
        android:layout_height="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#fff"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/MainTheme">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="10">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_outline_account_circle_24"
                android:layout_weight="7"/>

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Explore"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#fff"
                android:textSize="23dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extended_fab"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        android:backgroundTint="@color/MainTheme"
        android:layout_marginBottom="16dp"
        android:textColor="#fff"
        app:icon="@drawable/ic_outline_account_circle_24"
        app:iconTint="#fff"
        app:iconSize="30dp"
        android:textSize="15dp"
        android:text="@string/extended_fab_label"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>